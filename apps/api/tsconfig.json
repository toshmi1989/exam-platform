{
  "compilerOptions": {
    /* Base setup */
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"]
    },

    /* Environment */
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Output */
    "sourceMap": true,
    "declaration": false,

    /* Strictness - relaxed for build stability (production hotfix) */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    /* Module behavior */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"]
}
